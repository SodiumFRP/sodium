<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Airline2;assembly=Airline2"
    xmlns:fsxaml="http://github.com/fsprojects/FsXaml"
    mc:Ignorable="d"
    Title="SWidgets Examples: Airline 2" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Departure" />
        <Grid x:Name="DeparturePlaceholder" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Return" Margin="0,5,0,0" />
        <Grid x:Name="ReturnPlaceholder" Grid.Row="1" Grid.Column="1" Margin="5,5,0,0" />
        <Grid x:Name="ButtonPlaceholder" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,15,0,0" />
    </Grid>
</Window>
